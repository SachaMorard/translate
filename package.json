{
  "name": "translate-app",
  "version": "1.0.0",
  "description": "macOS translation app with UI and quick translate modes",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac"
  },
  "keywords": [
    "translation",
    "electron",
    "macos"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.0",
    "edgee": "^0.1.3",
    "node-global-key-listener": "^0.1.1",
    "robotjs": "^0.6.0"
  },
  "devDependencies": {
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0"
  },
  "build": {
    "appId": "com.translate.app",
    "asarUnpack": [
      "node_modules/node-global-key-listener/**/*",
      "node_modules/robotjs/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "files": [
      "**/*",
      "!dist",
      "!.git",
      "!node_modules/.cache"
    ]
  }
}
